<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="masterFragmentTheme">@style/AppTheme.MasterFragment</item>
    </style>

    <!-- Host activity theme. -->
    <style name="AppTheme.HostActivity">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <!-- Master Fragment theme. -->
    <style name="AppTheme.MasterFragment">
        <item name="masterFragmentBackground">?android:windowBackground</item>
    </style>

    <!-- Master Fragment theme, transparent -->
    <style name="AppTheme.MasterFragment.Transparent">
        <item name="masterFragmentBackground">@android:color/transparent</item>
    </style>
</resources>